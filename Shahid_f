<label>From Date:</label>
<input type="date" id="from_date">

<label>To Date:</label>
<input type="date" id="to_date">

<script>
    const today = new Date(), pastDate = new Date(today);
    pastDate.setDate(today.getDate() - 120);

    // Function to format dates as MM/DD/YYYY
    const formatDate = date => `${String(date.getMonth() + 1).padStart(2, '0')}/${String(date.getDate()).padStart(2, '0')}/${date.getFullYear()}`;

    const [fromDate, toDate] = [document.getElementById('from_date'), document.getElementById('to_date')];

    fromDate.min = toDate.min = formatDate(pastDate);
    fromDate.max = toDate.max = formatDate(today);
</script>

